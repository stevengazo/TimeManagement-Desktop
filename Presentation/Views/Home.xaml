<Window x:Class="Presentation.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="1.2*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" >
            <MenuItem Header="Administrador" Click="OnAdminPage" />
            <MenuItem Header="Ver Resumen" />
            <MenuItem Header="Acerca de .." />
        </Menu>
        <GroupBox Grid.Row="1" x:Name="groupBoxTarea" Header="Registro Tarea" >
            <Grid>
                <Grid.Resources >
                    <Style TargetType="Border" >
                        <Setter Property="Padding" Value="5,5,5,5" />
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition  Height="1*" />
                    <RowDefinition  Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="3.5*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Label  Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">Titulo</Label>
                <TextBox Grid.Row="0" Grid.Column="1" Width="80" x:Name="txtTitle" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
                <Label  Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center">Descripción</Label>
                <TextBox Grid.Row="0" Grid.Column="5" Width="80" x:Name="txtDescription" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
                <Label  Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">Fecha</Label>
                <DatePicker Grid.Row="0" Grid.Column="3" Width="80" />
                <Label  Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">Estado</Label>
                <ComboBox Grid.Row="2" Grid.Column="3" Width="80" Height="20" />
                <Label  Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">Prioridad</Label>
                <ComboBox Grid.Row="2" Grid.Column="1" Width="80" Height="20" />
                <Button Grid.Row="2" Grid.Column="4" Width="60" Height="20" >Agregar</Button>
                <Button Grid.Row="2" Grid.Column="5" Width="60" Height="20" >Cancelar</Button>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="2" x:Name="groupBox" Header="Lista Tareas" >
            <ListView />
        </GroupBox>
    </Grid>
</Window>
